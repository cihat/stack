{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "dev": "node --watch ./bin/www",
    "lint": "pretty-quick -w . && eslint . --fix",
    "lint-staged": "lint-staged",
    "test": "jest --testEnvironment=node --verbose --forceExit --watchAll --maxWorkers=1",
    "test-coverage": " jest --collect-coverage --testEnvironment=node --forceExit --maxWorkers=1"
  },
  "lint-staged": {
    "*.js": [
      "pretty-quick --staged",
      "eslint --fix"
    ],
    "*.{json|css|md}": [
      "pretty-quick --staged"
    ]
  },
  "dependencies": {
    "cookie-parser": "~1.4.7",
    "debug": "~4.4.1",
    "dotenv": "^17.2.1",
    "express": "~5.1.0",
    "http-errors": "~2.0.0",
    "mongoose": "^8.16.5",
    "mongoose-autopopulate": "^1.1.0",
    "morgan": "~1.10.1",
    "pug": "3.0.3"
  },
  "devDependencies": {
    "eslint": "^9.32.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "pretty-quick": "^4.2.2",
    "supertest": "^7.1.4"
  }
}
